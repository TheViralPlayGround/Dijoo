<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AddDijooFragment"
    style="@style/DijooPrimaryColor">

    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DijooListFragment"
    tools:showIn="@layout/activity_home"
    android:id="@+id/mainLinearLa"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ToolbarMain"
            android:elevation="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    />

            <ImageButton
                android:id="@+id/add_new_dijoo_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/ic_add_circle_white_24dp"
                android:background="@color/material_light_blue_200"
                android:padding="16dp"
                >

            </ImageButton>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/material_light_blue_200"
            android:gravity="center">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:elevation="4dp"
                android:id="@+id/datePickerButton"
                android:background="@color/material_light_blue_50"
                android:layout_margin="5dp"
                android:visibility="gone"/>


        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_blue_grey_300"
            android:id="@+id/frameLa">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dijooCardView"
            card_view:cardCornerRadius="4dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dijoo_list_view"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:background="@drawable/rounded_dijoo_list"
        >

    </android.support.v7.widget.RecyclerView>

        </android.support.v7.widget.CardView>

    </FrameLayout>

        <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fabTwo"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="16dp"-->
        <!--android:clickable="true"-->
        <!--android:visibility="visible"-->
        <!--android:src="@mipmap/ic_add_box_black_24dp"-->
        <!--app:layout_anchor="@id/dijoo_list_view"-->
        <!--app:layout_anchorGravity="bottom|right|end" />-->

    </LinearLayout>

    </android.support.v4.widget.DrawerLayout>
