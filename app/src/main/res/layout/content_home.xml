<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AddDijooFragment"
    style="@style/DijooPrimaryColor">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DijooListFragment"
    tools:showIn="@layout/activity_home"
    android:id="@+id/mainLinearLa"
        >
        
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dijooToolbar"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/material_blue_grey_300"
            android:id="@+id/frameLa">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/dijooCardView"
            card_view:cardCornerRadius="4dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dijoo_list_view"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:background="@drawable/rounded_dijoo_list"
        >

    </android.support.v7.widget.RecyclerView>

        </android.support.v7.widget.CardView>

    </FrameLayout>

        <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fabTwo"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="16dp"-->
        <!--android:clickable="true"-->
        <!--android:visibility="visible"-->
        <!--android:src="@mipmap/ic_add_box_black_24dp"-->
        <!--app:layout_anchor="@id/dijoo_list_view"-->
        <!--app:layout_anchorGravity="bottom|right|end" />-->

    </LinearLayout>

    </android.support.v4.widget.DrawerLayout>
