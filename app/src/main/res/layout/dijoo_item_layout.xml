<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:divider="@color/divider_color"
    android:showDividers="beginning"
    android:weightSum="10">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:orientation="vertical"
        android:layout_weight="6"
        android:paddingLeft="16dp"
        style="@style/DijooCardBackground">

    <TextView
        android:id="@+id/dijooItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_title"
        style="@style/DijooTitle"/>

    <TextView
        android:id="@+id/dijooItemSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_subtitle"
        style="@style/DijooSubTitle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/total_count_label"
            android:text="@string/total"
            android:layout_gravity="center_horizontal"
            />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:text="12"
        android:id="@+id/total_count"
        />
        </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:src="@mipmap/ic_add_circle_white_24dp"
        android:layout_weight="2"
        android:id="@+id/dijooItemPicture"/>

</LinearLayout>